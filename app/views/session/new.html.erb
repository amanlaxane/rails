<h1 class="text-center mt-4">Log in</h1>

<div id="page-content">
<div class="container">



<br><br>

<div class="row justify-content-center">
  <div class="col-10">


<%= form_with(scope: :session,url: login_path ,class:"shadow p-3 mb-3 bg-info rounded",  local: true) do |f| %>
<div class="form-group row">
  <%= f.label :username , class: "col-2 col-form-label text-light"%>
<div class="col-10">
  <%= f.text_field :username, class:"form-control"%>
</div>
</div>
<br>
<div class="form-group row">
  <%= f.label :password, rows:10, class:"col-2 col-form-label text-light"%>
  <div class="col-10">
  <%= f.password_field :password, class: "form-control row-10"%>
</div>
</div>
<br>
<div class="form-group row justify-content-center">
  <div class="col-1">


  <%=f.submit "Log in", class:"btn btn-outline-light btn-lg " %>
</div>
  </div>

<% end%>
</div>
</div>
</div>
</div>
