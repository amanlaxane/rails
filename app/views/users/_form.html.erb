<div id="page-content">
<div class="container">



<br><br>
<%if @user.errors.any?%>
<h2>The following errors prevented the article form being saved</h2>
<ul>
  <%@user.errors.full_messages.each do |e|%>
  <li><%=e %></li>
  <%end%>
</ul>
<%end%>
<div class="row justify-content-center">
  <div class="col-10">


<%= form_with(model: @user,class:"shadow p-3 mb-3 bg-info rounded",  local: true) do |f| %>
<div class="form-group row">
  <%= f.label :username , class: "col-2 col-form-label text-light"%>
<div class="col-10">
  <%= f.text_field :username, class:"form-control"%>
</div>
</div>
<br>



<div class="form-group row">
  <%= f.label :email,class: "col-2 col-form-lable text-light" %>
  <div class="col-10">
     <%= f.text_field :email, class:"form-control"%>
     </div>
     </div>
     <br>
<div class="form-group row">
  <%= f.label :password, rows:10, class:"col-2 col-form-label text-light"%>
  <div class="col-10">
  <%= f.password_field :password, class: "form-control row-10"%>
</div>
</div>
<br>
<div class="form-group row justify-content-center">
  <div class="col-1">


  <%=f.submit class:"btn btn-outline-light btn-lg " %>
</div>
  </div>

<% end%>
</div>
</div>
</div>
</div>
