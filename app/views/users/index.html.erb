<h1 class="text-center mt-4">Alpha Bloggers</h1>

<% @users.each do |art| %>
<div class="row justify-content-md-center">

<div class="col-8 mt-4">


<div class="card text-center shadow mb-5 bg-white rounded">
  <h5 class="card-header font-italic"> <%=link_to art.username,user_path(art) %>
  </h5>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to gravatar_for(art, size:150),user_path(art) %></h5>
    <p class="card-text "><%= pluralize(art.articles.count, "articles") %></p>
    <%=link_to  'View Profile', user_path(art), class: "btn btn-outline-info"%>
    <%if logged_in? && art.username==current_user.username%>
    <%= link_to 'edit profile', edit_user_path(art), class: "btn btn-outline-warning"%>
<%else%>
    <%end%>

  </div>
</div>
</div>
</div>

<% end %>
