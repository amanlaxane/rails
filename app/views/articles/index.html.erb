<div id="page-content"><h3 class="text-center mt-4">articles List</h3>
<% @articles.each do |art| %>
<div class="row justify-content-md-center">

<div class="col-8 mt-4">


<div class="card text-center shadow mb-5 bg-white rounded">
  <h5 class="card-header font-italic">by <%=art.user.username %></h5>
  <div class="card-body">
    <h5 class="card-title"><%= link_to art.title,article_path(art), class: "text-success" %></h5>
    <p class="card-title "><%= art.Author %></p>
    <p class="card-text"><%= truncate(art.description,length:50) %></p>
      <%=link_to  'Show', article_path(art), class: "btn btn-outline-info"%>

    <%if logged_in? && art.user == current_user%>
     <%= link_to 'Delete', article_path(art), method: :delete, data:{confirm: "are you sure you want ro delete "}, class: "btn btn-outline-danger"%>

    <%= link_to 'edit', edit_article_path(art),class: "btn btn-outline-warning"%>
      <%else%>
      <%end%>
  </div>
</div>
</div>
</div>
<%end%>
<table border="5" style="background: -webkit-linear-gradient(white,aqua);" class="table">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th colspan=3>Actions</th>
  </thead>

  <tbody>
    <% @articles.each do |art| %>
    <tr border-left: 1px solid #000; >


    <td><%= art.title %> </td>
    <td><%= art.Author %></td>
      <td><%= art.description %></td>
    <td><%= link_to 'Delete', article_path(art), method: :delete, data:{confirm: "are you sure you want ro delete "}%></td>
<td><%= link_to 'Show', article_path(art)%></td>
<td><%= link_to 'edit', edit_article_path(art)%></td>
      </tr>
        <% end %>
  </tbody>

</table>
<th><%=link_to 'create new article',new_article_path%></th>
</div>
