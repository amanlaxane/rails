<div id="page-content">
<div class="container">


<h3 class="text-center mt-4">Adding the article</h3>
<br><br>
<%if @article.errors.any?%>
<h2>The following errors prevented the article form being saved</h2>
<ul>
  <%@article.errors.full_messages.each do |e|%>
  <li><%=e %></li>
  <%end%>
</ul>
<%end%>
<div class="row justify-content-center">
  <div class="col-10">


<%= form_with scope: :article,class:"shadow p-3 mb-3 bg-info rounded", url: articles_path, local: true do |f| %>
<div class="form-group row">
  <%= f.label :title , class: "col-2 col-form-label text-light"%>
<div class="col-10">
  <%= f.text_field :title, class:"form-control"%>
</div>
</div>
<br>



<div class="form-group row">
  <%= f.label :Author,class: "col-2 col-form-lable text-light" %>
  <div class="col-10">
     <%= f.text_field :Author, class:"form-control"%>
     </div>
     </div>
     <br>
<div class="form-group row">
  <%= f.label :Description, rows:10, class:"col-2 col-form-label text-light"%>
  <div class="col-10">
  <%= f.text_area :description, class: "form-control row-10"%>
</div>
</div>
<br>
<div class="form-group row justify-content-center">
  <div class="col-1">


  <%=f.submit class:"btn btn-outline-light btn-lg " %>
</div>
  </div>

<% end%>
</div>
</div>
</div>
</div>
